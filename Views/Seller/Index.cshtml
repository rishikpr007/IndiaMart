@model IEnumerable<IndiaMart.Models.Seller>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:Darkred;">Sellers List</h2>

<p style="color:black;">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr style="background-color:DodgerBlue;">
        <th>
            @Html.DisplayNameFor(model => model.SellerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OwnerName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="background-color: powderblue; color : black">
            <td>
                @Html.DisplayFor(modelItem => item.SellerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SellerID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SellerID })|
                @Html.ActionLink("Details", "Details", new { id = item.SellerID })|

            </td>
        </tr>
    }

</table>
