@model IEnumerable<IndiaMart.Models.DisplaySellerProductVM>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Seller Details</h2>


<p>
    @Html.ActionLink("Add New Product", "AddSellPro")
</p>
<table class="table" style="background-color:lightgray">
    <tr style="background-color:dodgerblue;">
        <th>
            @Html.DisplayNameFor(model => model.BrandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Actions
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>

                @Html.ActionLink("Delete", "DeleteProductFromSeller", new { id = item.SellProId, sellerId = item.SellerID })
            </td>
        </tr>
    }

</table>
